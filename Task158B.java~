import java.util.Scanner;
public class Task158B {
	public static void main (String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int[] groupCount = new int[4];
		for (int i = 0; i < n; i++) {
			int s = sc.nextInt();
			switch (s) {
				case 1: 
					groupCount[0]++;
					break;
				case 2: 
					groupCount[1]++;
					break;
				case 3: 
					groupCount[2]++;
					break;
				case 4: 
					groupCount[3]++;
					break;
			}
		}
		/*for (int i = 0; i < 4; i++) {
			System.out.print(groupCount[i] + " ");
			System.out.println();
		}*/
		int sum = groupCount[3] + groupCount[2] + (groupCount[1] / 2);
		//System.out.println("First sum" + sum);
		if (groupCount[2] < groupCount[0]) {
			groupCount[0] = groupCount[0] - groupCount[2];
		} else {
			groupCount[0] = 0;
		}
		//System.out.println("groupCount[0] = " + groupCount[0]);
		if (groupCount[1] % 2 != 0) {
			groupCount[1] = 2;
		} else {
			groupCount[1] = 0;
		}
		//System.out.println("groupCount[1] = " + groupCount[1]);
		int trash = groupCount[1] + groupCount[0];
		//System.out.println("trash = " + trash);
		sum = sum + (trash / 4);
		//System.out.println("Second sum = " + sum);
		if (trash % 4 != 0) {
			sum = sum + 1;
		}
		System.out.println(sum);
	}
}
