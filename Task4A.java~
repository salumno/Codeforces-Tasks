import java.util.Scanner;
public class Task4A {
	public static void main (String[] args) {
		Scanner sc = new Scanner(System.in);
		int weight = sc.nextInt();
		boolean flag = true;
		if (weight % 2 > 0 || weight == 2) {
			flag = false;
		}
		if (flag) {
			System.out.println("YES");
		} else {
			System.out.println("NO");
		}
	}
}
