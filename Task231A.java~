import java.util.Scanner;
public class Task231A {
	public static void main (String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		byte[] confidence = new byte[3];
		int counter = 0;
		for (int i = 0; i < n; i++) {
			int k = 0;
			for (int j = 0; j < confidence.length; j++) {
				confidence[j] = sc.nextByte();
				if (confidence[j] == 1) {
					k++;
				}
			}
			if (k >= 2) {
				counter++;
			}
		}
		System.out.println(counter);
	}
}
